<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.golfgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name" android:name="com.accgames.feedback.AcraSending">
        <activity
            android:name=".activities.SplashScreen"
            android:debuggable="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.golfgame.activities.SplashScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:debuggable="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.golfgame.activities.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.TutorialActivity"
            android:label="@string/game_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.InstructionsActivity"
            android:label="@string/instructions_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.GolfGameActivity"
            android:label="@string/game_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/about_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.CheckKeyActivity"
            android:label="@string/keyConf_label"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.KeyConfActivity"
            android:label="@string/keyConf_label"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.FormActivity"
            android:label="@string/form_label"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.RankingActivity"
            android:label="@string/form_label"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>