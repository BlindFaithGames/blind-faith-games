<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/menu_background_vert"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:padding="30dip"
	android:orientation="horizontal" >
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_gravity="center"
		android:id="@+id/linear_layout_main" >
		<Button
			android:id="@+id/new_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/new_game_label"
			android:contentDescription="@string/new_game_label"
			android:layout_marginBottom="15dp"
			android:textColor="@color/button"
			android:background="@drawable/background_button" />
		<Button
			android:id="@+id/settings_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/settings_label"
			android:contentDescription="@string/settings_label"
			android:layout_marginBottom="15dp"
			android:textColor="@color/button"
			android:background="@drawable/background_button" />
		<Button
			android:id="@+id/keyConf_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/keyConf_label"
			android:contentDescription="@string/keyConf_label"
			android:layout_marginBottom="15dp"
			android:textColor="@color/button"
			android:background="@drawable/background_button" />
		<Button
			android:id="@+id/instructions_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/instructions_label" 
			android:contentDescription="@string/instructions_label"
			android:layout_marginBottom="15dp"
			android:textColor="@color/button"
			android:background="@drawable/background_button" 
		/>
		<Button
			android:id="@+id/exit_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/exit_label" 
			android:contentDescription="@string/exit_label" 
			android:textColor="@color/button"
			android:background="@drawable/background_button" 
		/>
	</LinearLayout>
</LinearLayout>
