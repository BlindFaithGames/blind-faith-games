<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has your Android device enough physical keys?" 
             android:contentDescription="@string/q6_context">
        </TextView>

        <RadioGroup
            android:id="@+id/ans6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <RadioButton
                android:id="@+id/radio18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes" 
                 android:contentDescription="@string/yes_context">
            </RadioButton>

            <RadioButton
                android:id="@+id/radio19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                 android:contentDescription="@string/no_context" >
            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/q8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has the game, enough information to play it?" 
             android:contentDescription="@string/q8_context">
        </TextView>

        <RadioGroup
            android:id="@+id/ans8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <RadioButton
                android:id="@+id/radio26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes" 
                 android:contentDescription="@string/yes_context">
            </RadioButton>

            <RadioButton
                android:id="@+id/radio27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                 android:contentDescription="@string/no_context" >
            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/q10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About the boards in the minesweeper, are the buttons on the screen too small?" 
            android:contentDescription="@string/q10_context">
        </TextView>

        <RadioGroup
            android:id="@+id/ans10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <RadioButton
                android:id="@+id/radio34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes" 
                 android:contentDescription="@string/yes_context">
            </RadioButton>

            <RadioButton
                android:id="@+id/radio35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                 android:contentDescription="@string/no_context" >
            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/q12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you think that it&apos;s hard to change the game configuration?" 
            android:contentDescription="@string/q12_context">
        </TextView>

        <RadioGroup
            android:id="@+id/ans12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <RadioButton
                android:id="@+id/radio44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes" 
                 android:contentDescription="@string/yes_context">
            </RadioButton>

            <RadioButton
                android:id="@+id/radio45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                 android:contentDescription="@string/no_context" >
            </RadioButton>
        </RadioGroup>

        <TextView
            android:id="@+id/q14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicional commentaries:" 
            android:contentDescription="@string/q14_context">
        </TextView>

        <MultiAutoCompleteTextView
            android:id="@+id/ans14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/button_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Finish" 
            android:contentDescription="@string/finish_context">
        </Button>
    </LinearLayout>

</ScrollView>